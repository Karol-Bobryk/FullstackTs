{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "absolutePath.ts", "./*"],
  "exclude": ["node_modules"]
}
